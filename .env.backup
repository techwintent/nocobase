################# WINTENT 定制配置 #################
# 使用说明：将此文件内容复制到 .env 文件中

################# DOCKER #################
ADMINER_PORT=10101
DB_MYSQL_PORT=10102
DB_POSTGRES_PORT=10103
VERDACCIO_PORT=10104

################# NOCOBASE APPLICATION #################
APP_ENV=development
APP_PORT=13000
APP_KEY=wintent-secure-app-key-change-in-production-2024
API_BASE_PATH=/api/
API_BASE_URL=

################# DATABASE (PostgreSQL) #################
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=wintent
DB_USER=wintent
DB_PASSWORD=wintent
DB_TIMEZONE=+08:00
DB_TABLE_PREFIX=

################# INITIAL SETUP - 初始化配置 #################
# 管理员账号：admin@wintent.tech
# 默认密码：admin123
INIT_ROOT_EMAIL=admin@wintent.tech
INIT_ROOT_PASSWORD=admin123
INIT_ROOT_NICKNAME=Wintent Admin
INIT_ROOT_USERNAME=admin
INIT_APP_LANG=zh-CN

################# LOGGING #################
LOGGER_TRANSPORT=console,dailyRotateFile
LOGGER_LEVEL=info
LOGGER_BASE_PATH=storage/logs

################# CACHE #################
CACHE_DEFAULT_STORE=memory
CACHE_MEMORY_MAX=2000

################# FILE STORAGE #################
DEFAULT_STORAGE_TYPE=local
LOCAL_STORAGE_DEST=storage/uploads

################# TIMEZONE #################
TZ=Asia/Shanghai

